<GridPane prefHeight="262.0" prefWidth="704.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DesktopUserInterface.MainScene.BodyScene.EncryptDecrypt.EncryptDecryptDetailsController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="500.0" />
        <ColumnConstraints minWidth="200.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints maxHeight="47.0" minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="47.0" minHeight="40.0" prefHeight="47.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="33.0" minHeight="33.0" prefHeight="33.0" vgrow="SOMETIMES" />
        <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="8.5" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <children>
                <Label fx:id="encryptDecryptTextLabel" text="Proccessed word:">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="decodedWordsTextArea" editable="false" prefHeight="31.0" prefWidth="365.0" />
            </children>
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <Label fx:id="encryptDecryptTextLabel1" text="Word to proccess:">
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </Label>
                <TextField fx:id="encryptDecryptTextBox" minWidth="300.0" prefHeight="31.0" prefWidth="364.0" promptText="Put word To encrypt/decrypt" />
            </children>
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </GridPane.margin>
        </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Label prefHeight="31.0" prefWidth="131.0" text="Decoding method:">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </Label>
            <RadioButton fx:id="fullWordButton" mnemonicParsing="false" onAction="#onFullWordButtonPressed" prefHeight="21.0" prefWidth="97.0" text="Full Word">
               <HBox.margin>
                  <Insets bottom="7.0" left="7.0" top="10.0" />
               </HBox.margin>
            </RadioButton>
            <RadioButton fx:id="letterByLetterButton" mnemonicParsing="false" onAction="#onLetterByLetterButtonPressed" prefHeight="21.0" prefWidth="135.0" text="Letter By Letter">
               <HBox.margin>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="10.0" />
               </HBox.margin>
            </RadioButton>
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </HBox>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="7.0" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.rowSpan="2">
         <children>
              <Button fx:id="encryptDecryptButton" mnemonicParsing="false" onAction="#onDecryptionButtonClicked" prefHeight="31.0" prefWidth="191.0" styleClass="encryption-buttons" stylesheets="@EncryptDecryptDetails.css" text="Proccess">
                  <padding>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
              </Button>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#onClearButtonClicked" prefHeight="31.0" prefWidth="191.0" styleClass="encryption-buttons" stylesheets="@EncryptDecryptDetails.css" text="Clear">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Button>
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.columnSpan="2">
         <children>
            <Label id="process-messege-label" prefHeight="39.0" prefWidth="341.0" stylesheets="@EncryptDecryptDetails.css" text="Process messege">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0" />
         </children>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </VBox>
        <Button fx:id="ResetMachineStateButton" mnemonicParsing="false" onAction="#onResetMachineStateButtonClicked" prefHeight="31.0" prefWidth="193.0" styleClass="reset-state-button" stylesheets="@EncryptDecryptDetails.css" text="Reset Machine State" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         <GridPane.margin>
            <Insets bottom="5.0" left="200.0" right="5.0" top="5.0" />
         </GridPane.margin>
        </Button>
    </children>
</GridPane>
