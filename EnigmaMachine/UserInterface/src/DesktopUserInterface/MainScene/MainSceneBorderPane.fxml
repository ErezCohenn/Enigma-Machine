<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DesktopUserInterface.MainScene.MainController">
   <content>
      <BorderPane fx:id="borderPane">
         <top>
            <fx:include fx:id="topBorderPane" source="TopScene/TopBorderPane.fxml" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
               <tabs>
                  <Tab fx:id="machineTab" onSelectionChanged="#OnMachineTabSelected" text="Machine">
                    <content>
                      <AnchorPane>
                           <children>
                              <fx:include fx:id="machineGrid" source="BodyScene/Machine/MachineGrid.fxml" />
                           </children>
                        </AnchorPane>
                    </content>
                  </Tab>
                  <Tab fx:id="encryptDecryptTab" onSelectionChanged="#OnEncryptDecryptTabSelected" text="Encrypt/Decrypt">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <fx:include fx:id="encryptDecryptGrid" source="BodyScene/EncryptDecrypt/EncryptDecryptGrid.fxml" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab fx:id="bruteForceTab" onSelectionChanged="#OnBruteForceTabSelected" text="Brute Force">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <fx:include fx:id="bruteForceGrid" source="BodyScene/BruteForce/BruteForceGrid.fxml" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </center>
      </BorderPane>
   </content>
</ScrollPane>
