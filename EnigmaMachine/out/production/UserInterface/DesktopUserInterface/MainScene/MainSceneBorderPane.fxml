<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="500.0" minWidth="700.0" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DesktopUserInterface.MainScene.MainController">
   <top>
      <fx:include source="TopScene/TopBorderPane.fxml" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <tabs>
            <Tab fx:id="machineTab" onSelectionChanged="#OnMachineTabSelected" text="Machine">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <fx:include source="BodyScene/Machine/MachineGrid.fxml" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab fx:id="encryptDecryptTab" onSelectionChanged="#OnEncryptDecryptTabSelected" text="Encrypt/Decrypt">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <fx:include source="BodyScene/EncryptDecrypt/EncryptDecryptGrid.fxml" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab fx:id="bruteForceTab" onSelectionChanged="#OnBruteForceTabSelected" text="Brute Force">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <fx:include source="BodyScene/BruteForce/BruteForceGrid.fxml" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
